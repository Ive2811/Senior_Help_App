<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Pagina_principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Pantalla Principal"
        android:contentDescription="Pantalla principal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textColor="#9C6C4B"
        android:textColorHint="#000000"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        android:contentDescription="botón con imagen de silueta de casa"
        app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_pp_cap"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                android:contentDescription="botón para ingresar a pantalla de capacitación"
                app:srcCompat="@drawable/logros" />

            <ImageButton
                android:id="@+id/imgbtn_pp_preguntas"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                android:contentDescription="botón para ingresar a pantalla de preguntas frecuentes"
                app:srcCompat="@drawable/preguntas" />


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_pp_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/alata"
                    android:text="Capacitación"
                    android:contentDescription="Capacitación"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/txt_pp_preg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:contentDescription="Preguntas frecuentes"
                    android:fontFamily="@font/alata"
                    android:text="Preguntas frecuentes"
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_pp_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="Cerrar sesión"
                android:contentDescription="botón para cerrar sesión"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="60dp"
                app:icon="@drawable/ic_ingresar" />
        </LinearLayout>
    </ScrollView>
</layout>