<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisLogros">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="pulsado" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

    <TextView
        android:id="@+id/txt_ml_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Mis logros"
        android:textAlignment="center"
        android:textColor="#9C6C4B"
        android:textSize="34sp" />

        <TextView
            android:id="@+id/txt_ml_frase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:layout_marginTop="20dp"
            android:text="&quot;El éxito es la suma de pequeños esfuerzos que se repiten día tras día.&quot;"
            android:textAlignment="center"
            android:textColor="#3B5463"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_ml_logro1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/buttons"
            android:scaleType="fitCenter"
            android:src="@drawable/exito" />

            <TextView
                android:id="@+id/txt_ml_title2"
                android:layout_width="215dp"
                android:layout_height="70dp"
                android:fontFamily="@font/alata"
                android:text="Completar &quot;Primeros pasos.&quot;"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="24sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_ml_logro1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="371dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:onClick="pulsado"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_ml_favorito1"
                android:clickable="true"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/favoritos"
                android:src="@drawable/cambio_boton" />

            <Button
                android:id="@+id/imgbtn_ml_escuchar1"
                android:clickable="true"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:background="@drawable/buttons"
                app:icon="@drawable/ic_baseline_volume_up_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imgbtn_ml_logro2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        android:src="@drawable/medalla" />

    <TextView
        android:id="@+id/txt_ml_title3"
        android:layout_width="215dp"
        android:layout_height="70dp"
        android:fontFamily="@font/alata"
        android:text="Completar &quot;Uso de apartados.&quot;"
        android:textAlignment="center"
        android:textColor="#9C6C4B"
        android:textSize="24sp"/>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_ml_logro2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="371dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:text='Completar "Uso de apartados."'/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp">

            <ImageButton
                android:id="@+id/imgbtn_ml_favorito2"
                android:clickable="true"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/favoritos"
                android:src="@drawable/cambio_boton" />

        <Button
            android:id="@+id/imgbtn_ml_escuchar2"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/buttons"
            app:icon="@drawable/ic_baseline_volume_up_24" />
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>