<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactoForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/imgbtn_form_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="150dp"
        android:layout_marginVertical="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

    <TextView
        android:id="@+id/txt_form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Editar contacto"
        android:textAlignment="center"
        android:textColor="#9C6C4B"
        android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblContactoFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/alata"
       android:textColor="#000000"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <EditText
        android:id="@+id/txteContactoName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Nombre"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lblContactoID"
        app:layout_constraintTop_toBottomOf="@+id/lblContactoID" />

    <EditText
        android:id="@+id/txteContactoPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="TelÃ©fono"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txteContactoName"
        app:layout_constraintTop_toBottomOf="@+id/txteContactoName"/>


            <Button
                android:id="@+id/btnSave"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/buttons"
                android:fontFamily="@font/alata"
                android:onClick="save"
                android:text="GUARDAR"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:backgroundTint="@color/color1"
                app:icon="@drawable/ic_disco"
                app:layout_constraintEnd_toStartOf="@+id/btnCancel"
                app:layout_constraintStart_toStartOf="@+id/txteContactoPhone"
                app:layout_constraintTop_toBottomOf="@+id/txteContactoPhone" />

            <Button
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bordes"
                android:baselineAligned="false"
                android:fontFamily="@font/alata"
                android:onClick="cancel"
                android:text="CANCELAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:backgroundTint="@color/color1"
                app:icon="@drawable/ic_circulo_cruzado"
                app:layout_constraintBottom_toBottomOf="@+id/btnSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnSave"
                app:layout_constraintTop_toTopOf="@+id/btnSave" />

            <Button
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:onClick="delete"
                android:text="ELIMINAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:backgroundTint="#6FFF1100"
                app:icon="@drawable/ic_basura"
                app:layout_constraintEnd_toEndOf="@+id/btnSave"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnSave"
                app:layout_constraintTop_toBottomOf="@+id/btnSave" />

    <TextView
        android:id="@+id/lblContactoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/alata"
        android:text="ID"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/lblContactoFormTitle"
        app:layout_constraintTop_toBottomOf="@+id/lblContactoFormTitle" />

    <TextView
        android:id="@+id/txtvContactoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/alata"
        android:textColor="#3B5463"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="product_id"
        app:layout_constraintBottom_toBottomOf="@+id/lblContactoID"
        app:layout_constraintStart_toEndOf="@+id/lblContactoID"
        app:layout_constraintTop_toTopOf="@+id/lblContactoID"/>

</androidx.constraintlayout.widget.ConstraintLayout>