<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CapacitacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_cap_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:layout_marginVertical="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

            <TextView
                android:id="@+id/txt_cap_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Capacitación"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_capacitacion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_cap_pasos"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/objetivo" />


            <ImageButton
                android:id="@+id/imgbtn_cap_consejos"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ayuda" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cap_pasos"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/alata"
                android:text="Primeros Pasos"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textColorHint="#3B5463"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_cap_consejos"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/alata"
                android:text="Consejos y Ayuda"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textColorHint="#3B5463"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_cap_apartados"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/apartados" />

            <ImageButton
                android:id="@+id/imgbtn_cap_preguntas"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/preguntas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cap_apartados"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Uso de Apartados"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:layout_marginRight="10dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_cap_preguntas"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Preguntas Frecuentes"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textSize="22sp" />
        </LinearLayout>

            <ImageButton
                android:id="@+id/imgbtn_cap_logros"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mislogros" />

            <TextView
                android:id="@+id/txt_cap_logros"
                android:layout_width="137dp"
                android:layout_height="46dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/alata"
                android:text="Mis logros"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>
</layout>