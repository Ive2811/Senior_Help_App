<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CapacitacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_cap_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:layout_marginVertical="0dp"
                android:scaleType="fitCenter"
                android:contentDescription="botón para volver a pantalla principal"
                app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

            <TextView
                android:id="@+id/txt_cap_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Capacitación"
                android:contentDescription="Capacitación"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_capacitacion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_cap_pasos"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón para ingresar a pantalla de primeros pasos"
                    app:srcCompat="@drawable/objetivo" />


                <ImageButton
                    android:id="@+id/imgbtn_cap_consejos"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón para ingresar a pantalla de consejos y ayuda"
                    app:srcCompat="@drawable/ayuda" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cap_pasos"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/alata"
                    android:text="Primeros Pasos"
                    android:contentDescription="primeros pasos"
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_cap_consejos"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/alata"
                    android:text="Consejos y Ayuda"
                    android:contentDescription="consejos y ayuda"
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_cap_apartados"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón para ingresar a pantalla de uso de apartados"
                    app:srcCompat="@drawable/apartados" />

                <ImageButton
                    android:id="@+id/imgbtnpreguntasF"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón para ingresar a pantalla de preguntas frecuentes"
                    app:srcCompat="@drawable/preguntas" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cap_apartados"
                    android:layout_width="148dp"
                    android:layout_height="92dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/alata"
                    android:text="Uso de Apartados Móvil"
                    android:contentDescription="uso de apartados móvil"
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_cap_preguntas"
                    android:layout_width="148dp"
                    android:layout_height="92dp"
                    android:fontFamily="@font/alata"
                    android:text="Preguntas Frecuentes"
                    android:gravity="center"
                    android:contentDescription="preguntas frecuentes"
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_apartadosCom"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                android:contentDescription="botón para ingresar a pantalla de uso de apartados de computadora"
                app:srcCompat="@drawable/com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_apartadosCom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/alata"
                android:text="Uso de Apartados Computadora"
                android:contentDescription="Uso de apartados computadora"
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textSize="22sp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>