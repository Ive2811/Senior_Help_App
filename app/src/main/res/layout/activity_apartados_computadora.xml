<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity_ApartadosComputadora">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_ac_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:scaleType="fitCenter"
                android:contentDescription="botón para volver a pantalla principal"
                app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

            <TextView
                android:id="@+id/txt_ac_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Uso de apartados para computadora"
                android:contentDescription="Uso de apartados para computadora."
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_ac_apartado1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón con imagen de una computadora"
                    app:srcCompat="@drawable/ordenador_portatil" />

                <TextView
                    android:id="@+id/txt_ac_apartado1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:fontFamily="@font/alata"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Uso básico de la computadora"
                    android:textColor="#3B5463"
                    android:contentDescription="Uso básico de la computadora"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_ac_apartado2"
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitCenter"
                    android:contentDescription="botón con imagen de procesador de texto"
                    app:srcCompat="@drawable/palabra_1_" />

                <TextView
                    android:id="@+id/txt_ac_apartado2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:contentDescription="Cómo usar Word"
                    android:fontFamily="@font/alata"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="¿Cómo usar Word?"
                    android:textColor="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
