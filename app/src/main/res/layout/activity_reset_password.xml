<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityResetPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgbtn_rp_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:layout_marginVertical="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

        <TextView
        android:id="@+id/txt_rp_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Recuperar contraseña"
            android:textAlignment="center"
            android:textColor="#9C6C4B"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

    <TextView
        android:id="@+id/txt_rp_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Ingrese su correo electrónico para recuperar su contraseña. "
        android:textColor="#3B5463"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_si_correo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   Correo electrónico"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        android:layout_marginTop="20dp"
        app:helperTextTextColor="@color/color3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_si_correo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_name"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_rp_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:text="Enviar"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:icon="@drawable/ic_baseline_send_24" />

    <Button
        android:id="@+id/btn_rp_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:text="Volver atrás"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        app:icon="@drawable/ic_baseline_arrow_back_24" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>