<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity_computadora">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtn_com_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:layout_marginVertical="0dp"
                android:scaleType="fitCenter"
                android:contentDescription="botón para volver a pantalla principal"
                app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

            <TextView
                android:id="@+id/txt_com_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Aspectos básicos de una computadora "
                android:contentDescription="¿Como Crear una Cuenta en WhatsApp?"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/video5_com_inicio"
                    android:layout_width="400dp"
                    android:layout_height="550dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
