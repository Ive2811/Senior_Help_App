<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apartados">

    <TextView
        android:id="@+id/txt_aa_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_aa_atras" />

    <TextView
        android:id="@+id/txt_aa_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toTopOf="@+id/txt_aa_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_aa_atras"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="611dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/txt_aa_footer"
        app:layout_constraintStart_toStartOf="@+id/txt_aa_header"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/txt_aa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:text="Uso de Apartados "
        android:textAlignment="center"
        android:textColor="#9C6C4B"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_aa_apartado1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_aa_header" />

    <Button
        android:id="@+id/btn_aa_apartado1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/bordes"
        android:backgroundTint="@color/color1"
        android:fontFamily="@font/alata"
        android:text="Presione aquí para ver el video."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_video_library_24"
        app:layout_constraintBottom_toTopOf="@+id/btn_aa_apartado2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_aa_title" />

    <Button
        android:id="@+id/btn_aa_apartado2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="159dp"
        android:background="@drawable/bordes"
        android:backgroundTint="@color/color1"
        android:fontFamily="@font/alata"
        android:text="Presione aquí para ver el video."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_video_library_24"
        app:layout_constraintBottom_toTopOf="@+id/txt_aa_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_aa_apartado1" />

</androidx.constraintlayout.widget.ConstraintLayout>