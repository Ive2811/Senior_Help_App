<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity3">


    <TextView
        android:id="@+id/txt_pp_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Capacitación"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_pp_cap"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_pp_recor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/alata"
        android:text="Recordatorios"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_pp_contactos"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_pp_recor" />


    <TextView
        android:id="@+id/txt_pp_contactos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/alata"
        android:text="Contactos"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_pp_logout"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_pp_contactos" />

    <Button
        android:id="@+id/btn_pp_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bordes"
        android:text="Cerrar sesión"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/txt_pp_footer"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_pp_contactos" />

    <TextView
        android:id="@+id/txt_pp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alata"
        android:text="Pantalla Principal"
        android:textColor="#9C6C4B"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pp_title"
        app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/imgbtn_pp_cap"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/txt_pp_cap"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_pp_recor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logros"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imgbtn_pp_recor"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/txt_pp_recor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_pp_cap"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/recordatorio"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imgbtn_pp_contactos"
        android:layout_width="138dp"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttons"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/txt_pp_contactos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pp_cap"
        app:srcCompat="@drawable/contactos" />

    <TextView
        android:id="@+id/txt_pp_footer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_pp_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toTopOf="@+id/txt_pp_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
