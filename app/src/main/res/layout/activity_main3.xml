<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Pantalla Principal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textColor="#9C6C4B"
        android:textColorHint="#000000"
        android:textSize="34sp" />

            <Button
                android:id="@+id/btn_princpal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_pp_cap"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logros" />


            <ImageButton
                android:id="@+id/imgbtn_pp_recor"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttons"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/recordatorio" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_pp_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/alata"
                    android:text="Capacitación"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_pp_recor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/alata"
                    android:text="Recordatorios"
                    android:textColor="#3B5463"
                    android:textColorHint="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_pp_contactos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/contactos" />

    <TextView
        android:id="@+id/txt_pp_contactos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Contactos"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="22sp"/>

            <Button
                android:id="@+id/btn_pp_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="Cerrar sesión"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="60dp"
                app:icon="@drawable/ic_ingresar" />

        </LinearLayout>
    </ScrollView>
</layout>