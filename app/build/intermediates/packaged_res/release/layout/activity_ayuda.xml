<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp" android:tag="layout/activity_ayuda_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".Ayuda">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_ayu_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

            <TextView
                android:id="@+id/txt_ayu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Consejos y ayuda "
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_ayu_consejo1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/smartphone"/>

                <TextView
                    android:id="@+id/txt_ayu_consejo1"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="Puede subir el brillo si se le dificulta ver los componentes."
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtn_ayu_consejo2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/buttons"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/recordatorios"/>

            <TextView
                android:id="@+id/txt_ayu_consejo2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="Agregue recordatorios de sus actividades diarias para tener un mejor control de ellas."
                android:textAlignment="center"
                android:textColor="#3B5463"
                android:textSize="22sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_ayu_consejo3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/buttons"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/chat"/>

                <TextView
                    android:id="@+id/txt_ayu_consejo3"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="Practique el uso del dispositivo móvil para ir acostumbrándose a el."
                    android:textAlignment="center"
                    android:textColor="#3B5463"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
         