<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                               

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp" android:tag="layout/activity_preguntas_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".Preguntas">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgbtn_pre_home"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#FFFFFF"
                        android:layout_marginLeft="150dp"
                        android:layout_marginVertical="0dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/casa_silueta_negra_sin_puerta"/>

            <TextView
                android:id="@+id/txt_pre_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Preguntas Frecuentes "
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="34sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/txt_pregunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="¿Qué es Senior Help App?"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_respuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:isScrollContainer="false"
                android:text="Es una aplicación con la cual se busca instruir a personas adultas para el uso de celulares, y que puedan interactuar de una forma más fácil con nuevos dispositivos."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_respuesta1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/txt_pregunta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="¿Cuál es el objetivo?"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:isScrollContainer="false"
                android:text="Que los adultos mayores tengan la oportunidad de poder utilizar un dispositivo inteligente, con el fin de que puedan tener un mayor control de sus actividades utilizando esa aplicación. "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_respuesta2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

            <TextView
                android:id="@+id/txt_pregunta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="¿Para quién está dirigida?"
                android:textAlignment="center"
                android:textColor="#9C6C4B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_respuesta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:isScrollContainer="false"
                android:text="Para adultos mayores los cuales se les dificulta el poder usar un dispositivo móvil o que no tienen conocimiento alguno de estos."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_respuesta3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/bordes"
                android:fontFamily="@font/alata"
                android:text="PRESIONE AQUÍ PARA ESCUCHAR"
                android:textColor="#000000"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_volume_up_24" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
         