<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapacitacionActivity">

    <TextView
        android:id="@+id/txt_cap_footer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cap_logros"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/txt_cap_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E59E6D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_cap_atras"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="331dp"
        android:layout_marginBottom="671dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/txt_cap_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:backgroundTintMode="add"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:paddingStart="8dp"
        android:text="CapacitaciÃ³n"
        android:textColor="#9C6C4B"
        android:textColorHint="#9C6C4B"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_cap_pasos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_cap_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cap_header"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgbtn_cap_apartados"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_cap_preguntas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/apartados" />

    <ImageButton
        android:id="@+id/imgbtn_cap_pasos"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/objetivo" />

    <TextView
        android:id="@+id/txt_cap_pasos"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/alata"
        android:text="Primeros Pasos"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cap_consejos"
        app:layout_constraintEnd_toStartOf="@+id/txt_cap_consejos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_cap_pasos"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imgbtn_cap_logros"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginBottom="109dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cap_apartados"
        app:srcCompat="@drawable/mislogros" />

    <TextView
        android:id="@+id/txt_cap_preguntas"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/alata"
        android:text="Preguntas Frecuentes"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cap_apartados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_cap_apartados"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_cap_preguntas"
        app:layout_constraintVertical_bias="0.363"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/txt_cap_consejos"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="137dp"
        android:fontFamily="@font/alata"
        android:text="Consejos y Ayuda"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_cap_apartados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_cap_pasos"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_cap_pasos"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgbtn_cap_consejos"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/txt_cap_consejos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_cap_pasos"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_cap_pasos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ayuda" />

    <ImageButton
        android:id="@+id/imgbtn_cap_preguntas"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/buttons"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_cap_apartados"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553"
        app:srcCompat="@drawable/preguntas" />

    <TextView
        android:id="@+id/txt_cap_logros"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="Mis logros"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_cap_logros" />

    <TextView
        android:id="@+id/txt_cap_apartados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/alata"
        android:text="Uso de Apartados"
        android:textColor="#3B5463"
        android:textColorHint="#3B5463"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_cap_logros"
        app:layout_constraintEnd_toStartOf="@+id/txt_cap_preguntas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_cap_apartados" />


</androidx.constraintlayout.widget.ConstraintLayout>