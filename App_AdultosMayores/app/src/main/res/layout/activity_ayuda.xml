<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayuda">

    <TextView
        android:id="@+id/txt_consejo3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/round_corner_view"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:text="Puede subir el brillo                                        si se le dificulta ver los componentes."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#835050"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_consejo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ml_title" />

    <TextView
        android:id="@+id/txt_pp_header"
        android:layout_width="412dp"
        android:layout_height="42dp"
        android:layout_marginBottom="50dp"
        android:background="#E59E6D "
        app:layout_constraintBottom_toTopOf="@+id/txt_ml_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ml_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:text="Consejos y Ayuda "
        android:textAlignment="center"
        android:textColor="#9C6C4B"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_consejo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pp_header" />

    <TextView
        android:id="@+id/txt_consejo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/round_corner_view"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:text="Agregue recordatorios de sus actividades diarias para tener un mejor control de ellas."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#835050"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_consejo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_consejo3" />

    <TextView
        android:id="@+id/txt_consejo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="139dp"
        android:background="@drawable/round_corner_view"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:text="Practique el uso del dispositivo móvil para ir                 acostumbrándose  a el. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#835050"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_pp_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_consejo" />

    <TextView
        android:id="@+id/txt_pp_footer"
        android:layout_width="415dp"
        android:layout_height="38dp"
        android:background="#E59E6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_consejo2" />

</androidx.constraintlayout.widget.ConstraintLayout>